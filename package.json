{
  "name": "sdb-admin",
  "version": "1.0.0",
  "description": "Smart Bell Database Admin Portal - Full Stack Application",
  "main": "backend/server.js",
  "scripts": {
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "install-all": "npm run install-backend && npm run install-frontend",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm start",
    "dev-backend": "cd backend && npm run dev",
    "create-admin": "cd backend && npm run create-admin",
    "test-connection": "cd backend && npm run test-connection",
    "setup": "npm run install-all && npm run create-admin",
    "build": "cd frontend && npm run build",
    "vercel-build": "npm run install-all && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sdb-admin.git"
  },
  "keywords": [
    "admin-portal",
    "react",
    "nodejs",
    "mongodb",
    "azure-cosmos-db",
    "smart-bell",
    "database-management"
  ],
